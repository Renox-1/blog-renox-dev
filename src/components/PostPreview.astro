---
import '../styles/global.css';
const { title, snippet, tags, link } = Astro.props;
  ---

<a href={link} class="block">
  <div class="grid sm:grid-cols-1 gap-6 preview cursor-pointer">
    <div class="bg-gray-800 p-6 rounded-xl shadow transition-all duration-300 ease-out hover:shadow-xl hover:-translate-y-1 hover:bg-gray-700 flex flex-col gap-3">
      <h3 class="text-lg font-semibold text-white">{title}</h3>
        {snippet && <p class="text-white/90">{snippet}</p>}
        {tags?.length > 0 && (
          <div class="flex flex-wrap gap-2">
            {tags.map((tag: any) => (
              <span class="bg-blue-700/30 text-blue-300 text-xs px-2 py-1 rounded border border-blue-600/30">
                {tag}
              </span>
            ))}
          </div>
        )}
      </div>
    </div>
  </div>
</a>